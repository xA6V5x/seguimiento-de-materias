{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Recursos",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/windres.exe",
            "args": [
                "res/resources.rc",
                "-o",
                "res/resources.o"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Compilar C - todos los .c",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "src/*.c",
                "res/resources.o",
                "-I",
                "headers",
                "-o",
                "seguimiento-de-materias.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "Compile Resources"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}